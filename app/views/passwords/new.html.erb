<div class="background-devise devise-part">
  <div class="container">
    <div class="row form-text-style">
      <div class="col-10 offset-1 col-md-6 offset-md-3 col-lg-4 offset-lg-4 center-block">
        <h4 class='separator'>Mot de passe oubliÃ© ?</h4>
        <p class="p-1"></p>
        <%= simple_form_for (@user || :user), url: passwords_path do |f| %>
          <%= render partial: 'shared/error_notification', locals: { f: f } %>
          <%= f.input :email,
                      equired: true,
                      autofocus: true,
                      label: false,
                      placeholder: I18n.t('formulaire.email_required'),
                      input_html: {
                        class: 'vertical-form'
                      }
          %>
          <%= render partial: 'shared/submit_button',
                     locals: {
                       f: f,
                       button_label: "Envoyez les instructions"
                     }
          %>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
