<div class="background-devise devise-part">
  <div class="container">
    <div class="row form-text-style">
      <div class="col-10 offset-1 col-md-6 offset-md-3 col-lg-4 offset-lg-4 center-block">
        <h4 class='separator'><%= t('formulaire.confirmation_link') %></h4>
        <p class="p-1"></p>
        <%= simple_form_for (@user || :user), url: confirmations_path, html: { method: :post } do |f| %>
          <%= render partial: 'shared/error_notification', locals: { f: f } %>
          <%= f.full_error :confirmation_token %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: "Email",
                      input_html: {
                        class: 'vertical-form'
                      }
          %>
          <%= render partial: 'shared/submit_button',
                     locals: {
                       f: f,
                       button_label: "#{t('formulaire.confirmation_link_label')}"
                     }
          %>
          <%= render "devise/shared/links" %>
        <% end %>
        <br>
      </div>
    </div>
  </div>
</div>
